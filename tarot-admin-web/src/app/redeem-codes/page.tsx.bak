  // 閻樿埖鈧焦瑕嗛弻鎾冲毐閺?
  const renderStatus = (status: string) => {
    const statusMap = { active: { label: 'Active', color: 'green', icon: <CheckCircleOutlined /> }, used: { label: 'Used', color: 'blue', icon: <CheckCircleOutlined /> }, expired: { label: 'Expired', color: 'red', icon: <ClockCircleOutlined /> }, disabled: { label: 'Disabled', color: 'gray', icon: <StopOutlined /> }, };
    const config = statusMap[status as keyof typeof statusMap] || { label: status, color: 'default', icon: null };
    return <Tag color={config.color} icon={config.icon}>{config.label}</Tag>;
  };

  // 鐞涖劍鐗搁崚妤呭帳缂?
  const columns: ColumnsType<RedeemCode> = [
    {
title: 'Redeem Code',
      dataIndex: 'code',
      key: 'code',
      width: 200,
      render: (code: string) => (
        <Space>
          <Text code style={{ fontSize: 12, fontWeight: 'bold' }}>
            {code}
          </Text>
          <Tooltip title="Copy code">
            <Button
              type="text"
              size="small"
              icon={<CopyOutlined />}
              onClick={() => handleCopyCode(code)}
            />
          </Tooltip>
        </Space>
      ),
    },
    {
title: 'Credits',
      dataIndex: 'credits',
      key: 'credits',
      width: 100,
      render: (credits: number) => (
        <Tag color="gold">{credits}</Tag>
      ),
      sorter: (a, b) => a.credits - b.credits,
    },
    {
title: 'Status',
      dataIndex: 'status',
      key: 'status',
      width: 120,
      render: renderStatus,
filters:
  [
    { text: 'Active', value: 'active' },
    { text: 'Used', value: 'used' },
    { text: 'Expired', value: 'expired' },
    { text: 'Disabled', value: 'disabled' },
  ],
} ,
    {
title: 'Used By',
      dataIndex: 'used_by_user',
      key: 'used_by_user',
      width: 150,
      render: (user: any) => {
        if (!user) return <Text type="secondary">Not used</Text>;
        return (
          <Text code style={{ fontSize: 12 }}>
            {user.installation_id.substring(0, 8)}...
          </Text>
        );
      },
    },
    {
title: 'Used At',
      dataIndex: 'used_at',
      key: 'used_at',
      width: 180,
      render: (date: string | null) => {
        if (!date) return <Text type="secondary">Not used</Text>;
      },
    },
    {
title: 'Expires At',
      dataIndex: 'expires_at',
      key: 'expires_at',
      width: 180,
      render: (date: string | null) => {
        return <Text type="secondary">No expiry</Text>;
        const now = new Date();
        const isExpired = expireDate < now;
        return (
          <Text type={isExpired ? 'danger' : undefined}>
          </Text>
        );
      },
    },
    {
title: 'Batch ID',
      dataIndex: 'batch_id',
      key: 'batch_id',
      width: 150,
      render: (batchId: string | null) => {
        if (!batchId) return <Text type="secondary">N/A</Text>;
        return (
          <Text code style={{ fontSize: 11 }}>
            {batchId.length > 15 ? `${batchId.substring(0, 15)}...` : batchId}
          </Text>
        );
      },
    },
    {
title: 'Created At',
      dataIndex: 'created_at',
      key: 'created_at',
      width: 180,
      render: (date: string) => new Date(date).toLocaleString('zh-CN'),
      sorter: (a, b) => new Date(a.created_at).getTime() - new Date(b.created_at).getTime(),
    },
    {
      title: 'Actions',
      key: 'actions',
      width: 200,
      fixed: 'right',
      render: (_, record) => (
        <Space size="small">
          <Tooltip title="View Details">
            <Button
              type="text"
              size="small"
              icon={<EyeOutlined />}
              onClick={() => handleViewDetail(record)}
            />
          </Tooltip>

          {record.status === 'active' && (
            <Popconfirm
              title="Disable this code?"
              onConfirm={() => handleUpdateStatus(record, 'disabled')}
              okText="OK"
              cancelText="Cancel"
            >
              <Tooltip title="Disable">
                <Button
                  type="text"
                  size="small"
                  danger
                  icon={<StopOutlined />}
                />
              </Tooltip>
            </Popconfirm>
          )}

          {record.status === 'disabled' && (
            <Tooltip title="Enable">
              <Button
                type="text"
                size="small"
                icon={<CheckCircleOutlined />}
                onClick={() => handleUpdateStatus(record, 'active')}
              />
            </Tooltip>
          )}
        </Space>
      ),
    },
  ];
  return (
    <AdminLayout>
      <div style={{ marginBottom: 24 }}>
        <Row justify="space-between" align="middle">
          <Col>
            <Title level={2} style={{ margin: 0 }}>
            Redeem Codes
            </Title>
            <Text type="secondary">
            </Text>
          </Col>
          <Col>
            <Space>
              <Button
                icon={<ExportOutlined />}
                onClick={handleExport}
              >
                鐎电厧鍤弫鐗堝祦
              </Button>
              <Button
                icon={<PlusOutlined />}
                type="primary"
                onClick={() => setGenerateVisible(true)}
              >
                閻㈢喐鍨氶崗鎴炲床閻?
              </Button>
              <Button
                type="default"
                icon={<ReloadOutlined />}
                onClick={loadRedeemCodes}
                loading={loading}
              >
                閸掗攱鏌?
              </Button>
            </Space>
          </Col>
        </Row>
      </div>

      {/* 缂佺喕顓搁崡锛勫 */}
      <Row gutter={16} style={{ marginBottom: 24 }}>
        <Col xs={24} sm={6}>
          <Card>
            <Statistic
              title="閹鍘幑銏㈢垳"
              value={stats.total || 0}
              prefix={<GiftOutlined />}
            />
          </Card>
        </Col>
        <Col xs={24} sm={6}>
          <Card>
            <Statistic
              title="閺堝鏅ラ崗鎴炲床閻?
              value={stats.active || 0}
              styles={{ content: { color: '#52c41a' } }}
            />
            <Progress
              percent={stats.total ? Math.round((stats.active / stats.total) * 100) : 0}
              showInfo={false}
              strokeColor="#52c41a"
              size="small"
            />
          </Card>
        </Col>
        <Col xs={24} sm={6}>
          <Card>
            <Statistic
              title="瀹歌弓濞囬悽?
              value={stats.used || 0}
              styles={{ content: { color: '#1890ff' } }}
            />
            <Progress
              percent={stats.total ? Math.round((stats.used / stats.total) * 100) : 0}
              showInfo={false}
              strokeColor="#1890ff"
              size="small"
            />
          </Card>
        </Col>
        <Col xs={24} sm={6}>
          <Card>
            <Statistic
              title="瀹歌尪绻冮張?缁備胶鏁?
              value={(stats.expired || 0) + (stats.disabled || 0)}
              styles={{ content: { color: '#ff4d4f' } }}
            />
            <Progress
              percent={stats.total ? Math.round(((stats.expired + stats.disabled) / stats.total) * 100) : 0}
              showInfo={false}
              strokeColor="#ff4d4f"
              size="small"
            />
          </Card>
        </Col>
      </Row>

      {/* 缁涙盯鈧灏崺?*/}
      <Card style={{ marginBottom: 24 }}>
        <Row gutter={[16, 16]}>
          <Col xs={24} sm={8}>
            <Search
              placeholder="閹兼粎鍌ㄩ崗鎴炲床閻?
              allowClear
              onSearch={(value) => setFilters(prev => ({ ...prev, code: value }))}
            />
          </Col>
          <Col xs={24} sm={6}>
            <Select
              placeholder="閻樿埖鈧胶鐡柅?
              allowClear
              style={{ width: '100%' }}
              onChange={(value) => setFilters(prev => ({ ...prev, status: value }))}
            >
              <Option value="active">閺堝鏅?/Option>
              <Option value="used">瀹歌弓濞囬悽?/Option>
              <Option value="expired">瀹歌尪绻冮張?/Option>
              <Option value="disabled">瀹歌尙顩﹂悽?/Option>
            </Select>
          </Col>
          <Col xs={24} sm={10}>
            <Select
              placeholder="閹佃顐肩粵娑⑩偓?
              allowClear
              style={{ width: '100%' }}
              onChange={(value) => setFilters(prev => ({ ...prev, batch_id: value }))}
              showSearch
              filterOption={(input, option) => {
                const label = option?.label || option?.children;
                return String(label).toLowerCase().indexOf(input.toLowerCase()) >= 0;
              }}
            >
              {batches.map(batch => (
                <Option key={batch} value={batch}>{batch}</Option>
              ))}
            </Select>
          </Col>
        </Row>
      </Card>

      {/* 閸忔垶宕查惍浣姐€冮弽?*/}
      <Card>
        <Table
          columns={columns}
          dataSource={redeemCodes}
          rowKey="id"
          loading={loading}
          scroll={{ x: 1600 }}
          pagination={{
            current: currentPage,
            pageSize: pageSize,
            total: total,
            showSizeChanger: true,
            showQuickJumper: true,
            showTotal: (total, range) => `缁?${range[0]}-${range[1]} 閺夆槄绱濋崗?${total} 閺夘摝,
            onChange: (page, size) => {
              setCurrentPage(page);
              setPageSize(size);
            },
          }}
        />
      </Card>

      {/* 閻㈢喐鍨氶崗鎴炲床閻焦膩閹焦顢?*/}
      <Modal
        title="閻㈢喐鍨氶崗鎴炲床閻?
        open={generateVisible}
        onCancel={() => setGenerateVisible(false)}
        footer={null}
        width={600}
      >
        <Form
          form={generateForm}
          layout="vertical"
          onFinish={handleGenerate}
          initialValues={{
            expires_days: 365,
          }}
        >
          <Row gutter={16}>
            <Col span={12}>
              <Form.Item
                name="count"
                label="閻㈢喐鍨氶弫浼村櫤"
                rules={[
                  { required: true, message: '鐠囩柉绶崗銉ф晸閹存劖鏆熼柌? },
                  { type: 'integer', min: 1, max: 1000, message: '閺佷即鍣鸿箛鍛淬€忛崷?-1000娑斿妫? },
                ]}
              >
                <InputNumber
                  style={{ width: '100%' }}
                  placeholder="1-1000"
                  min={1}
                  max={1000}
                />
              </Form.Item>
            </Col>
            <Col span={12}>
              <Form.Item
                name="credits"
                label="缁夘垰鍨庨崐?
                rules={[
                  { required: true, message: '鐠囩柉绶崗銉濋崚鍡椻偓? },
                  { type: 'integer', min: 1, message: '缁夘垰鍨庨崐鐓庣箑妞よ銇囨禍?' },
