# 数据库配置
DATABASE_URL=sqlite:///tarot-ai-generator/data/tarot_config.db

# LLM配置
API_PROVIDER=zhipu

# 智谱AI配置
ZHIPUAI_API_KEY=your_zhipu_key

# OpenAI配置
OPENAI_API_KEY=your_openai_key
OPENAI_BASE_URL=https://api.hdgsb.com/v1

# 模型配置
MODEL_NAME=glm-4-flash
TEMPERATURE=0.7
MAX_TOKENS=1000

# 支付配置
STRIPE_SECRET_KEY=your_stripe_secret
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# JWT配置
JWT_SECRET_KEY=your_jwt_secret
JWT_ALGORITHM=HS256

# 邮箱配置 (QQ邮箱SMTP)
EMAIL_SMTP_HOST=smtp.qq.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=your_qq_email@qq.com
EMAIL_FROM_NAME=塔罗牌应用
EMAIL_PASSWORD=your_qq_auth_code
EMAIL_USE_TLS=true

# API调用限制
RATE_LIMIT_PER_MINUTE=60
BATCH_SIZE=10